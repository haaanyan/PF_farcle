<% content_for :title, "会員ログイン farcle" %>
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-8 col-sm-10 mt-3 mx-auto bg-light">
      <h2 class="text-center mt-3">会員ログイン</h2>
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <div class="col-lg-8 col-md-8 col-sm-10 mb-3 mx-auto">
          <div class="form-group">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :password, "パスワード（６文字以上）" %><br />
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
          </div>
          <div class="text-center">
            <%= f.submit "ログインする", class:"btn btn-outline-dark" %>
          </div>
          <p class="mt-5">
            会員でない方はこちらから登録してください →
            <%= link_to "新規会員登録", new_user_registration_path %>
          </p>
          <div class="text-center">
            <p>テストアカウントはこちら</p>
            <p>e-mail: aaaaaa@gmail.com</p>
            <p>PW: 11111111</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>