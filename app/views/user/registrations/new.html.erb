<% content_for :title, "新規会員登録 farcle" %>
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-8 col-ms-10 mt-3 mb-3 mx-auto bg-light">
      <%= render "shared/form_error", model: @user %>
      <h2 class="text-center mt-3">新規会員登録</h2>
      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
          <div class="col-lg-8 col-md-8 col-sm-10 mb-3 mx-auto">
            <div class="form-group">
              <%= f.label :name, "名前" %><br />
              <%= f.text_field :name, class: "form-control", autofocus: true %>
            </div>
            <div class="form-group">
              <%= f.label :prefecture, "お住まいの都道府県" %><br />
              <%= f.select :prefecture, User.prefectures.keys, {}, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :email, "メールアドレス" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :product, "主な生産物" %><br />
              <%= f.text_field :product, autofocus: true, class: "form-control", placeholder: "例: 米、トマト等" %>
            </div>
            <div class="form-group">
              <%= f.label :history, "農業従事歴" %><br />
              <%= f.text_field :history, autofocus: true, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :introduction, "自己紹介" %><br />
              <%= f.text_area :introduction, autofocus: true, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :password, "パスワード（６文字以上）" %><br />
              <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
            </div>
            <div class="text-center">
            <%= f.submit "新規会員登録", class:"btn btn-outline-dark" %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>