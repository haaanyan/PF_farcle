<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 col-sm-10 mx-auto mt-5">
      <div class="card text-white bg-info mt-3">
        <h4 class="card-header">投稿内容を編集する</h4>
          <%= form_with model:@post_image, local: true do |f| %>
            <div class="card-body">
              <div class="form-group">
                <%= f.label :image, "画像" %><br />
                <%= f.attachment_field :image, autofocus: true %>
              </div>
              <p class="mt-3">本文</p>
              <div class="form-group">
                <%= f.text_area :caption, class: "form-control" %>
              </div>
              <div class="text-right mt-3">
                <%= f.submit "変更内容を保存する", class: "btn btn-outline-light" %>
              </div>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>


