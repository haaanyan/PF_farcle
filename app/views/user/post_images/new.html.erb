<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto mt-5">
      <div class="card text-white bg-info mt-3">
        <h4 class="card-header">新規投稿</h4>
          <%= form_with model:@post_image, local: true do |f| %>
            <div class="card-body">
              <p>画像</p>
              <div class="input-group">
                <div class="custom-file">
                  <%= f.attachment_field :image, class: "custom-file-input" %>
                  <label class="custom-file-label">ファイルを選んでください</label>
                </div>
              </div>
              <p class="mt-3">本文</p>
              <div class="input-group">
                <%= f.text_area :caption, class: "form-control" %>
              </div>
              <div class="text-right mt-3">
                <%= f.submit "投稿する", class: "btn btn-outline-light" %>
              </div>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>

