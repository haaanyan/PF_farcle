<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto mt-5">
      <% @users.each do |user| %>
        <%= link_to user_path(user) do %>
          <%= attachment_image_tag user, :profile_image, size: "100x100", format: "jpeg", fallback: "image/no_image.jpg", class: "rounded-circle" %>
          <%= user.name %>
        <% end %>
    <% end %>
    </div>
  </div>
</div>