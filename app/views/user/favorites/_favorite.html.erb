<% if post_image.favorited_by?(current_user) %>
    <%= link_to post_image_favorites_path(post_image.id), method: :delete, remote: true do %>
      <i class="fas fa-heart", style="color:violet"></i> <%= post_image.favorites.count %>
    <% end %>
<% else %>
    <%= link_to post_image_favorites_path(post_image.id), method: :post, remote: true do %>
      <i class="far fa-heart", style="color:violet"></i> <%= post_image.favorites.count %>
    <% end %>
<% end %>
<% if @post_image.favorites.exists? %>
  <%= link_to "いいねしたユーザーをチェックする", post_image_favorites_path(@post_image) %>
<% end %>
