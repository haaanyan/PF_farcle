<div class="container">
  <div class="row">
    <div class="col-md-10 mt-3 mx-auto">
      <h2 class="mt-3">Profile</h2>
        <div class="row">
          <table class="table col-md-4">
            <tbody>
              <tr></tr>
              <tr>
                <th>
                  <%= attachment_image_tag @user, :profile_image, size: "200x200", format: "jpeg", fallback: "image/no_image.jpg", class: "rounded-circle" %>
                </th>
              </tr>
              <tr>
                <th>
                <%= link_to "編集", edit_user_path(@user) %>
                </th>
              </tr>
              <tr>
                <th><%= @user.name %></th>
              </tr>
              <tr>
                <% if @user != current_user %>
                <th>
                  <% if current_user.following?(@user) %>
                    <%= link_to "フォローを外す", user_relationships_path(@user), method: :delete %>
                  <% else %>
                    <%= link_to "フォローする", user_relationships_path(@user), method: :post %>
                  <% end %>
                </th>
                <% end %>
              </tr>
              <tr>
                <th>
                  follows: <%= @user.followings.count %>
                </th>
              </tr>
              <tr>
                <th>
                  followers: <%= @user.followers.count %>
                </th>
              </tr>
            </tbody>
          </table>
          <table class="table col-md-6">
            <tbody>
              <tr>
                <th>主な農産物</th>
                <th><%= @user.product %></th>
              </tr>
              <tr>
                <th>農業従事歴</th>
                <th><%= @user.history %> 年</th>
              </tr>
              <tr>
                <th>自己紹介</th>
                <th><%= @user.introduction %></th>
              </tr>

            </tbody>
          </table>
      　</div>
      　<h2 class="mt-3">投稿写真一覧</h2>
      　<%= link_to "新規投稿", new_post_image_path %>
      　<div class="row">
      　    <tbody>
              <% @post_images.each do |post_image| %>
             <tr>
              <td>
                <%= link_to post_image_path(post_image.id) do %>
                  <%= attachment_image_tag post_image, :image, size: "200x200" %>
                  <p>コメント<%= post_image.post_image_comments.count %>件</p>
                <% end %>
              </td>
            </tr>
            <% end %>
      　    </tbody>
      　</div>
    </div>
</div>