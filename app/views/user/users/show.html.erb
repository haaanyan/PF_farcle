<div class="container">
  <%= render "shared/flash_message" %>
  <div class="row">
    <div class="col-lg-6 col-md-6 mt-3">
      <h2 class="mt-3">Profile</h2>
        <div class="card mt-3">
          <%= attachment_image_tag @user, :profile_image, format: "jpeg", fallback: "image/no_image.jpg", class:"card-image-top" %>
          <div class="card-body">
            <h5 class="card-body">
              <% if @user == current_user %>
                <%= link_to edit_user_path(@user)  do %>
                  <i class="fas fa-user"></i>
                <% end %>
              <% else %>
                  <i class="fas fa-user"></i>
              <% end %>
              <%= @user.name %>
            </h5>
            <p class="card-text text-right">
              <% if @user != current_user %>
                <% if current_user.following?(@user) %>
                  <%= link_to "フォローを外す", user_relationships_path(@user), method: :delete %>
                <% else %>
                  <%= link_to "この会員をフォローする", user_relationships_path(@user), method: :post %>
                <% end %>
              <% end %>
            </p>
            <table class="table table-borderless">
              <tbody>
                <tr>
                  <th scope="row">主な生産物</th>
                    <td><%= @user.product %></td>
                  </tr>
                <tr>
                  <th scope="row">農業従事歴</th>
                  <td><%= @user.history %> 年</td>
                </tr>
                <tr>
                  <th scope="row">自己紹介</th>
                  <td><%= @user.introduction %></td>
                </tr>
              </table>
            <p class="card-text text-right">
              follows: <%= link_to user_followings_path(@user) do %>
                <%= @user.followings.count %>
              <% end %>
              followers: <%= link_to user_followers_path(@user) do %>
                <%= @user.followers.count %>
              <% end %>
            </p>
          </div>
        </div>
      </div>
      <div class="col-lg-6 col-md-6 mt-3">
        <h2 class="mt-3">Photos</h2>
        <% if @post_images.exists? %>
          <div class="row">
            <% @post_images.each do |post_image| %>
              <div class="col-6">
                <div class="card mt-2">
                  <%= link_to post_image_path(post_image.id) do %>
                    <%= attachment_image_tag post_image, :image, size: "250x200", class:"card-img-top" %>
                  <% end %>
                  <div class="card-body">
                    <p class="card-text">
                      <i class="far fa-comments"></i> <%= post_image.post_image_comments.count %>
                      <i class="fas fa-heart" style="color:violet"></i>︎ <%= post_image.favorites.count %>
                    </p>
                  </div>
                  <div class="card-footer text-right">
                    <small class="text-muted"><%= time_ago_in_words(post_image.updated_at) %></small>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
        <h6>まだ投稿写真がありません</h6>
        <% end %>
      </div>
    </div>
  </div>