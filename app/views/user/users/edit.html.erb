<div class="container">
  <%= form_with model: @user, local: true do |f| %>

  <div class="field">
    <%= f.label :name, "名前" %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :prefecture, "お住まいの都道府県" %><br />
    <%= f.select :prefecture, User.prefectures.keys, {} %>
  </div>
  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field">
    <%= f.label :profile_image, "プロフィール画像" %><br />
    <%= f.attachment_field :profile_image, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :product, "主な生産物" %><br />
    <%= f.text_field :product, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :history, "農業従事歴" %><br />
    <%= f.text_field :history, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :introduction, "自己紹介" %><br />
    <%= f.text_field :introduction, autofocus: true %>
  </div>

  <div class="form-group row">
    <%= f.submit "変更内容を保存", class:"btn btn-primary" %>
  </div>
<% end %>
</div>
