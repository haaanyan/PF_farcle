<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto mt-5">
      <h2>編集画面</h2>
      <%= form_with model:@board, local: true do |f| %>
        <h4>タイトル</h4>
        <%= f.text_field :title %>
        <h4>本文</h4>
        <%= f.text_area :body %>
        <%= f.submit '保存' %>
      <% end %>
    </div>
  </div>
</div>