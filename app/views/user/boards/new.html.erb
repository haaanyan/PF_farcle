<% content_for :title, "新規トピック作成 farcle" %>
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-8 col-sm-10 mx-auto mt-5">
      <%= render "shared/form_error", model: @board %>
      <div class="card text-white bg-info mt-3">
        <h4 class="card-header">新規トピック作成</h4>
          <%= form_with model:@board, local: true do |f| %>
            <div class="card-body">
              <p>トピックタイトル</p>
              <div class="input-group mb-3">
                <%= f.text_field :title, class: "form-control" %>
              </div>
              <p>本文</p>
              <div class="input-group">
                <%= f.text_area :body, class: "form-control" %>
              </div>
              <div class="text-right mt-3">
                <%= f.submit "新規トピックを作成する", class: "btn btn-outline-light" %>
              </div>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>


